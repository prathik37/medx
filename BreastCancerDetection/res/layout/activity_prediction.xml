<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvPred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPredTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="@string/prediction_ypred"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvPredTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:text="@string/prediction_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPred"
        android:layout_marginTop="122dp"
        android:layout_toLeftOf="@+id/tvPredTitle"
        android:text="Menu" 
        android:onClick ="onClickMainMenuButton"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnMainMenu"
        android:layout_alignBottom="@+id/btnMainMenu"
        android:layout_toRightOf="@+id/tvPredTitle"
        android:text="Save" 
        android:onClick ="onClickSavePatientButton"/>

</RelativeLayout>
